---
import BaseLayout from '../layouts/BaseLayout.astro';
import FeatureCard from '../components/FeatureCard.astro';
import CTASection from '../components/CTASection.astro';
import { features } from '../data/features';
---

<BaseLayout
  title="Features"
  description="Explore Accountium's full feature set: AI bookkeeping, smart invoicing, real-time dashboards, tax prep, and more."
>
  <!-- Page Header -->
  <section class="page-hero section-sm" aria-label="Page header">
    <div class="container page-hero-inner">
      <p class="section-label"><span aria-hidden="true">◈</span> Features</p>
      <h1>Everything your finance team needs</h1>
      <p class="page-subline">
        Accountium combines AI automation with best-in-class accounting tools —
        so your team spends less time on data entry and more time on decisions.
      </p>
    </div>
  </section>

  <!-- All Features Grid -->
  <section class="section-sm" aria-labelledby="all-features-heading">
    <div class="container">
      <h2 id="all-features-heading" class="sr-only">All features</h2>
      <div class="grid-3">
        {features.map((f) => (
          <FeatureCard {...f} />
        ))}
      </div>
    </div>
  </section>

  <!-- Integration Strip -->
  <section class="integrations-section section-sm" aria-labelledby="integrations-heading">
    <div class="container">
      <div class="integrations-inner glass-card">
        <h2 id="integrations-heading">Connects with your stack</h2>
        <p>
          Accountium integrates natively with the tools your team already uses.
          No manual CSV exports — just live, bi-directional data sync.
        </p>
        <div class="integration-tags" role="list">
          {['Stripe', 'Shopify', 'Plaid', 'HubSpot'].map((name) => (
            <span role="listitem" class="integration-tag">{name}</span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <CTASection
    headline="See it in action"
    subline="Accountium — One Platform. Any Industry. Any Team Size."
    secondaryLabel="Try Now"
    secondaryHref="https://www.myaccountium.ca/Account/SignIn"
    secondaryTarget="_blank"
  />
</BaseLayout>

<style>
  .page-hero {
    padding-top: calc(var(--header-height) + var(--space-16));
  }

  .page-hero-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-4);
  }

  .page-hero-inner h1 {
    font-size: var(--text-3xl);
    font-weight: 700;
    letter-spacing: -0.03em;
  }

  .page-subline {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 54ch;
    margin: 0;
  }

  /* Integrations */
  .integrations-inner {
    padding: var(--space-12) var(--space-8);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-6);
    border-radius: var(--radius-lg);
  }

  .integrations-inner h2 {
    font-size: var(--text-2xl);
    font-weight: 700;
    letter-spacing: -0.03em;
  }

  .integrations-inner p {
    max-width: 50ch;
    margin: 0;
  }

  .integration-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    justify-content: center;
    margin-top: var(--space-2);
  }

  .integration-tag {
    padding: 6px 16px;
    border-radius: var(--radius-full);
    background: rgba(255,255,255,0.05);
    border: 1px solid var(--color-border);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-secondary);
    transition: border-color var(--duration-fast), color var(--duration-fast);
  }

  .integration-tag:hover {
    border-color: var(--color-border-strong);
    color: var(--color-text-primary);
  }

  /* Screen-reader only */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0,0,0,0);
    white-space: nowrap;
    border: 0;
  }
</style>
