---
interface Props {
  headline?: string;
  subline?: string;
}

const {
  headline = 'Accounting that\nthinks with you.',
  subline   = 'Accountium uses AI to automate your books, invoices, and tax prep â€” giving your team back hours every week and your CFO a live picture of the business.',
} = Astro.props;
---

<section class="hero" aria-label="Hero">
  <!-- Ambient glow orbs -->
  <div class="orb orb-blue"  aria-hidden="true"></div>
  <div class="orb orb-green" aria-hidden="true"></div>

  <div class="container hero-inner">
    <div class="hero-badge">
      <span class="badge-dot" aria-hidden="true"></span>
      AI-native accounting platform
    </div>

    <h1 class="hero-headline">
      {headline.split('\n').map((line, i) => (
        <span class="hero-line">{line}{i < headline.split('\n').length - 1 && <br />}</span>
      ))}
    </h1>

    <p class="hero-subline">{subline}</p>

    <div class="hero-actions">
      <a href="/contact" class="btn btn-primary">
        Start free trial
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
          <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
      <a href="/features" class="btn btn-ghost">See how it works</a>
    </div>

    <div class="hero-social-proof">
      <div class="avatars" aria-hidden="true">
        {[1,2,3,4].map((i) => (
          <div class="avatar" style={`--i:${i}`}></div>
        ))}
      </div>
      <p>Trusted by <strong>2,400+</strong> finance teams worldwide</p>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-block: calc(var(--header-height) + var(--space-16)) var(--space-24);
    overflow: hidden;
  }

  /* Ambient orbs */
  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.35;
    pointer-events: none;
  }

  .orb-blue {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(79,142,247,0.6) 0%, transparent 70%);
    top: -100px;
    left: -150px;
    animation: float-slow 8s ease-in-out infinite alternate;
  }

  .orb-green {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(34,211,160,0.5) 0%, transparent 70%);
    bottom: 0;
    right: -100px;
    animation: float-slow 11s ease-in-out infinite alternate-reverse;
  }

  @keyframes float-slow {
    from { transform: translate(0, 0) scale(1); }
    to   { transform: translate(40px, -30px) scale(1.05); }
  }

  .hero-inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: 6px 14px;
    border-radius: var(--radius-full);
    background: var(--color-accent-dim);
    border: 1px solid rgba(79,142,247,0.25);
    font-size: var(--text-xs);
    font-weight: 600;
    letter-spacing: 0.04em;
    color: var(--color-accent);
    margin-bottom: var(--space-8);
    text-transform: uppercase;
  }

  .badge-dot {
    width: 7px;
    height: 7px;
    border-radius: 50%;
    background: var(--color-accent);
    box-shadow: 0 0 8px var(--color-accent);
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50%       { opacity: 0.4; }
  }

  /* Headline */
  .hero-headline {
    font-size: var(--text-hero);
    font-weight: 700;
    letter-spacing: -0.035em;
    line-height: 1.08;
    color: var(--color-text-primary);
    max-width: 14ch;
    margin-bottom: var(--space-6);
  }

  /* Subline */
  .hero-subline {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 54ch;
    line-height: 1.65;
    margin-bottom: var(--space-10);
  }

  /* Actions */
  .hero-actions {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-10);
    flex-wrap: wrap;
    justify-content: center;
  }

  /* Social proof */
  .hero-social-proof {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .avatars {
    display: flex;
    margin-right: var(--space-2);
  }

  .avatar {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    border: 2px solid var(--color-bg);
    background: linear-gradient(
      135deg,
      hsl(calc(var(--i) * 60deg) 60% 55%),
      hsl(calc(var(--i) * 60deg + 30deg) 50% 40%)
    );
    margin-left: -8px;
  }

  .avatar:first-child { margin-left: 0; }

  .hero-social-proof p {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    max-width: none;
    margin: 0;
  }

  .hero-social-proof strong {
    color: var(--color-text-secondary);
    font-weight: 600;
  }

  @media (max-width: 600px) {
    .hero-actions { flex-direction: column; align-items: stretch; }
    .hero-actions .btn { justify-content: center; }
  }
</style>
