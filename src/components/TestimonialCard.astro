---
interface Props {
  quote: string;
  author: string;
  role: string;
  company: string;
}

const { quote, author, role, company } = Astro.props;

const initials = author.split(' ').map(n => n[0]).join('');
---

<article class="testimonial-card glass-card">
  <div class="quote-mark" aria-hidden="true">"</div>
  <blockquote>
    <p class="quote-text">{quote}</p>
    <footer class="quote-footer">
      <div class="quote-avatar" aria-hidden="true">{initials}</div>
      <div class="quote-attribution">
        <cite class="quote-author">{author}</cite>
        <span class="quote-role">{role}, {company}</span>
      </div>
    </footer>
  </blockquote>
</article>

<style>
  .testimonial-card {
    padding: var(--space-8);
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    position: relative;
  }

  .quote-mark {
    font-size: 4rem;
    line-height: 0.7;
    font-family: Georgia, serif;
    color: var(--color-accent);
    opacity: 0.4;
    pointer-events: none;
    user-select: none;
  }

  blockquote {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    flex: 1;
  }

  .quote-text {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: 1.7;
    font-style: italic;
    max-width: none;
    margin: 0;
  }

  .quote-footer {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-top: auto;
  }

  .quote-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-accent), var(--color-green));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-xs);
    font-weight: 700;
    color: #fff;
    flex-shrink: 0;
  }

  .quote-attribution {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .quote-author {
    font-size: var(--text-sm);
    font-weight: 600;
    font-style: normal;
    color: var(--color-text-primary);
  }

  .quote-role {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }
</style>
